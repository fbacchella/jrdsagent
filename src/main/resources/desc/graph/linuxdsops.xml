<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE graphdesc PUBLIC "-//jrds//DTD Graph Description//EN" "urn:jrds:graphdesc">
<graphdesc>
  <name>LinuxDiskstatOps</name>
  <graphName>op-${index}</graphName>
  <graphTitle>I/O operations on disk ${index} on ${host}</graphTitle>
  <verticalLabel>operations/s</verticalLabel>
  <add>
    <legend>write operations (up graph)</legend>
  </add>
  <add>
    <name>w</name>
    <graphType>line</graphType>
    <color>blue</color>
    <legend>Number of write accesses</legend>
  </add>
  <add>
    <legend>read operations (down graph)</legend>
  </add>
  <add>
    <name>r</name>
    <reversed>true</reversed>
    <graphType>line</graphType>
    <color>green</color>
    <legend>Number of read accesses</legend>
  </add>
  <hosttree>
    <pathelement>HOST</pathelement>
    <pathelement>DISK</pathelement>
    <pathelement>DISKACTIVITY</pathelement>
    <pathelement>INDEX</pathelement>
    <pathstring>Activity as operation/s</pathstring>
  </hosttree>
  <viewtree>
    <pathelement>DISK</pathelement>
    <pathelement>DISKACTIVITY</pathelement>
    <pathstring>Activity as operation/s</pathstring>
    <pathelement>HOST</pathelement>
    <pathelement>INDEX</pathelement>
  </viewtree>
</graphdesc>
