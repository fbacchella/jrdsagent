<assembly
        xmlns="https://maven.apache.org/xsd/assembly-2.1.1.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>agentwindows</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <unpackOptions>
                <excludes>
                    <exclude>jrds/agent/linux/**</exclude>
                    <exclude>META-INF/maven/com.googlecode.json-simple/**</exclude>
                    <exclude>desc/**</exclude>
                    <exclude>jrds/agent/windows/**</exclude>
                    <exclude>jrds/probe/**</exclude>
                    <exclude>org/jolokia/**/osgi/**</exclude>
                    <exclude>org/jolokia/server/core/service/impl/Osgi*.class</exclude>
                    <exclude>org/jolokia/server/detector/**</exclude>
                    <exclude>META-INF/jolokia/detectors-default</exclude>
                </excludes>
            </unpackOptions>
            <excludes>
                <exclude>org.jolokia:jolokia-client-java</exclude>
                <exclude>org.jolokia:jolokia-server-detector</exclude>
                <exclude>com.googlecode.json-simple:json-simple</exclude>
                <exclude>org.apache.httpcomponents:httpcore</exclude>
                <exclude>commons-codec:commons-codec</exclude>
                <exclude>org.apache.httpcomponents:httpclient</exclude>
                <exclude>commons-logging:commons-logging</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>jrds/agent/linux/**</exclude>
                <exclude>jrds/probe/**</exclude>
                <exclude>desc/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
