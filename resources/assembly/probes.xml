<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>probes</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>true</unpack>
            <scope>runtime</scope>
            <unpackOptions>
            <includes>
                <include>org/jolokia/client/**</include>
                <include>org/json/simple/**</include>
            </includes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>jrds/agent/RProbe?*.java</exclude>
                <exclude>com4j/**</exclude>
            </excludes>
            <includes>
                <include>jrds/agent/RProbe.class</include>
                <include>jrds/agent/CollectException.class</include>
                <include>jrds/probe/**</include>
                <include>desc/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/desc</directory>
            <outputDirectory>desc</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>